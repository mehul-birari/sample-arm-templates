{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "defaultValue": "myHDIcluster",
      "type": "String"
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "mystoracc"
    }
  },
  "variables": {
    "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "[parameters('storageAccountName')]",
      "location": "West US 2",
      "sku": {
        "name": "Standard_RAGRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "keyType": "Account",
              "enabled": true
            },
            "blob": {
              "keyType": "Account",
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    },
    {
      "type": "Microsoft.HDInsight/clusters",
      "apiVersion": "2018-06-01-preview",
      "name": "[parameters('clusterName')]",
      "location": "West US 2",
      "properties": {
        "clusterVersion": "3.6.1000.67",
        "osType": "Linux",
        "clusterDefinition": {
          "kind": "HADOOP",
          "componentVersion": {
            "Hadoop": "2.7"
          }
        },
        "computeProfile": {
          "roles": [
            {
              "name": "headnode",
              "targetInstanceCount": 2,
              "hardwareProfile": {
                "vmSize": "standard_d12_v2"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "sshuser",
                  "password": "mypwd123"
                }
              }
            },
            {
              "name": "workernode",
              "targetInstanceCount": 4,
              "hardwareProfile": {
                "vmSize": "standard_d4_v2"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "sshuser",
                  "password": "mypwd123"
                }
              }
            },
            {
              "name": "zookeepernode",
              "targetInstanceCount": 3,
              "hardwareProfile": {
                "vmSize": "standard_a2_v2"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "sshuser",
                  "password": "mypwd123"
                }
              }
            }
          ]
        },
        "tier": "standard",
        "storageProfile": {
          "storageaccounts": [
            {
              "name": "[concat(parameters('storageAccountName'), '.blob.core.windows.net')]",
              "container": "[concat(parameters('clusterName'), 'cont')]",
              "isDefault": true,
              "key": "[listKeys(variables('storageAccountId'), '2019-04-01').keys[0].value]"
            }
          ]
        },
        "minSupportedTlsVersion": "1.2"
      }
    }
  ]
}